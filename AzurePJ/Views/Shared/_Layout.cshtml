<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AzurePJ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="page-wrapper-grid">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="main-container-grid">
                <nav id="sidebar" class="sidebar" aria-label="Side Navigation">
                    <div class="sidebar-header">
                        <h5>メニュー</h5>
                    </div>
                    <a class="nav-link" href="/Photos">🖼️ フォト</a>
                    <a class="nav-link" href="/Albums">🗂️ アルバム</a>
                    <form asp-controller="FamilyUsersLogins" asp-action="Logout" method="post" class="mt-auto">
                        <button type="submit" class="btn btn-outline-danger w-100">ログアウト</button>
                    </form>
                </nav>

                <div id="sidebarBackdrop"></div>

                <main class="content" role="main">
                    <button id="sidebarToggle" class="btn btn-light d-md-none mb-2" aria-label="Toggle Sidebar">☰ メニュー</button>
                    @RenderBody()
                </main>
            </div>
        }
        else
        {
            <div class="center-wrapper">
                <main role="main" class="pb-3 form-box">
                    @RenderBody()
                </main>
            </div>
        }

        <footer class="footer text-muted">
            <div class="container text-center">
                <small>© 2025 家族アルバム. みんなの思い出を大切に</small>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
