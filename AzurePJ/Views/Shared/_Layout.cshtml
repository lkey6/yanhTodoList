<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AzurePJ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AzurePJ.styles.css" asp-append-version="true" />
</head>
@if (User.Identity.IsAuthenticated)
{
    <body>
        <div class="main-container">
            <div class="sidebar d-flex flex-column">

                <div class="sidebar-header text-center">
                    <div class="fw-bold">お帰り、@User.Identity.Name</div>
                    <br />
                    <br />
                    <a href="/FamilyUsersLogins/Logout" class="cool-btn">ログアウト</a>
                </div>

                <nav class="nav flex-column mt-3 flex-grow-1 px-2">
                    <a class="nav-link d-flex align-items-center" href="/Albums"><span class="me-2">📁</span>アルバム</a>
                    <a class="nav-link d-flex align-items-center" href="/Favorites"><span class="me-2">⭐</span>お気に入り</a>
                    <a class="nav-link d-flex align-items-center" href="/Shared"><span class="me-2">👥</span>共有</a>
                    <a class="nav-link d-flex align-items-center" href="/Trash"><span class="me-2">🗑️</span>ゴミ箱</a>
                </nav>

            </div>


            <div class="content">
                @RenderBody()
            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container text-center">
                <small>© 2025 家族アルバム. みんなの思い出を大切に</small>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
}
else
{
    <body>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container text-center">
                <small>© 2025 家族アルバム. みんなの思い出を大切に</small>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
}


</html>