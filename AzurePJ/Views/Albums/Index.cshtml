@model Dictionary<string, List<(string ThumbnailUrl, string OriginalUrl)>>

<h2>图库</h2>

@foreach (var folder in Model)
{
    <h3>@folder.Key</h3>
    <div class="gallery" style="display:flex; flex-wrap:wrap;">
        @foreach (var item in folder.Value)
        {
            <a href="@item.OriginalUrl" target="_blank" style="margin:5px;">
                <img src="@item.ThumbnailUrl" alt="Thumbnail" style="width:150px; height:150px; object-fit:cover;" />
            </a>
        }
    </div>
}
