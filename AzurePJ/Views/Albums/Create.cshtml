@model AzurePJ.Models.Album

<div class="album-header d-flex align-items-center justify-content-between mb-3">
    <h2 class="album-title m-0">アルバムを作成</h2>
    <a href="/Albums" class="cool-btn album-back-btn">戻る</a>
</div>

<div class="album-form-container">
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name">アルバム名</label>
            <input class="form-input" asp-for="Name" placeholder="新しいアルバム名を入力" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="cool-btn album-create-btn">
            写真を追加
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
