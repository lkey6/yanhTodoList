@model AzurePJ.Models.PhotoUploadViewModel
@{
    ViewData["Title"] = "写真をアップロード";
}

<div class="container">
    <h2>アルバム：@ViewBag.AlbumName</h2>
    <p style="text-align:center;">ここにあなたの大切な思い出の写真をアップロードしましょう♡</p>

    <form asp-action="UploadPhoto" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="AlbumId"/>
        <div class="mb-3">
            <label asp-for="Title" class="form-label">タイトル（任意）</label>
            <input asp-for="Title" class="form-control" placeholder="例：海での思い出" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">説明（任意）</label>
            <textarea asp-for="Description" class="form-control" placeholder="思い出のコメント"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhotoFile" class="form-label">写真を選択</label>
            <input asp-for="PhotoFile" type="file" class="form-control" />
            <span asp-validation-for="PhotoFile" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-pink">アップロード♡</button>
            <a asp-action="Index" class="btn btn-secondary">戻る</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}