@model IEnumerable<AzurePJ.Models.Photo>
@{
    var album = ViewBag.Album as AzurePJ.Models.Album;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2>@album.Name</h2>
    <a href="/Albums" class="btn btn-secondary">戻る</a>
</div>

<form asp-action="UploadPhotos" asp-route-id="@album.Id" method="post" enctype="multipart/form-data">
    <input type="file" name="files" multiple class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">アップロード</button>
</form>

<hr />

<div class="photo-grid">
    @foreach (var photo in Model)
    {
        <div class="photo-item">
            <img src="@photo.ThumbnailPath" alt="@photo.ThumbnailPath" />
        </div>
    }
</div>

<style>
.photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 10px;
}
.photo-item img {
    width: 100%;
    border-radius: 8px;
    cursor: pointer;
    transition: transform .2s;
}
.photo-item img:hover {
    transform: scale(1.05);
}
</style>
